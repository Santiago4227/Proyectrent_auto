<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvrenItem"
        android:layout_width="380dp"
        android:layout_height="270dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" >

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="#3B325FB8"
            android:background="@drawable/outline" />

        <!-- OPCIONES CARTA -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="20dp" >

            <!-- TITULO NUMERO DE RENTA -->
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="NUMERO RENTA"
                android:gravity="start|center"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- CAMPO NUMERO DE RENTA -->
            <TextView
                android:id="@+id/tvlistNumberRent"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/outline"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="70dp" >

            <!-- TITULO PLACA AUTO -->
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="PLACA AUTO"
                android:gravity="start|center"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- CAMPO PLACA -->
            <TextView
                android:id="@+id/tvlistPlate"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/outline"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="120dp" >

            <!-- TITULO USUARIO -->
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="USUARIO"
                android:gravity="start|center"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- CAMPO USUARIO -->
            <TextView
                android:id="@+id/tvlistUserName"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/outline"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="170dp" >

            <!-- TITULO FECHA RENTA -->
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="FECHA RENTA"
                android:gravity="start|center"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- CAMPO FECHA INICIAL RENTA -->
            <TextView
                android:id="@+id/tvlistInitialDate"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/outline"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="220dp" >

            <!-- TITULO FECHA RENTA -->
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="FECHA ENTREGA"
                android:gravity="start|center"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- CAMPO FECHA INICIAL RENTA -->
            <TextView
                android:id="@+id/tvlistEndDate"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/outline"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>